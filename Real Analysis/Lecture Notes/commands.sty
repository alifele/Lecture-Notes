\newcounter{defcounter}[section]
\newenvironment{defbox}[2][]{
		\refstepcounter{defcounter}	%% setting the counter
		\par\medskip\noindent		%% setting the spacings	
		\begin{Defbox}{\thesection.\thedefcounter}{#2}	%% Creating the tcolorbox
		\par\medskip				%% Spacing setting 
		}
		{\end{Defbox}}

\newcounter{example}[section]
\newenvironment{example}[2][]{
		\refstepcounter{example}	%% setting the counter
		\par\medskip\noindent		%% setting the spacings	
		\begin{Example}{\thesection.\theexample}{#2}	%% Creating the tcolorbox
		\par\medskip				%% Spacing setting 
		}
		{\end{Example}}
		
